

.agv
  &-col
    flex 0 1 auto
    align-self auto
    &--center
      align-self center
      flex 0 0 auto
    &--stretch
      align-self stretch
      flex 1 0 auto

  &-button__icon
    margin-left .5em
  &-clear
    clear both
  &-event
    max-width 100%
    margin 0 0 16px 0
    padding 16px
    border 1px solid #e7e7e7
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content flex-start
    align-content stretch
    align-items stretch
    a&
      &
      &:visited
      &:hover
        text-decoration none
        color #666 !important
    &--post
      vertical-align top
      display inline-block
      width 49.5%
      height auto

    .tx-column.tx-column-size-1-3 &
      width 100%
    &__mainimage
      width 150px
      padding contentPadding
    &__image
      display block
      padding-bottom 16px
      .home &
        text-align center
    &__headline
      margin-top 0
      margin-bottom contentPadding
      color base
      .home .entry-content &
        color #565656
        a
          font-weight 500
          text-decoration none
    &__info
    &__taxonomy
      padding-bottom 8px
    &__attributes
      display flex
    &__cta
      margin-top .5em
      text-align right
      white-space nowrap
      .agv-event & span.agv-button
      .agv-event & a.agv-button
        background base
        color white
        padding .75em 1.5em
        font-weight bolder
        border-radius 5px
        border 1px solid darken(base, 10%)
        display inline-block
    &__excerpt
      max-width 100%
    &__info
      display inline-block
      width 100%
      vertical-align text-bottom
      line-height 1.2em
    &__dateinfo
      &--list
        margin-right contentPadding
        text-align center
      &--date
        font-size 1.3em
      &--year
        font-size 1.55em
    &__priceinfo
      float right
      white-space nowrap
      &-value
        font-weight bolder
        font-size 1.25em
    @media large
      width 100%
