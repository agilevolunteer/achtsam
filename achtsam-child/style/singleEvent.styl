.single-event .site-main
  padding-top 0
.agv-singleEvent
  &__main
    display flex
    flex-direction row
    @media medium
      flex-direction column
  &__headline
    display block
    font-size 32px
    line-height 100px
    padding 0
    margin 0
    font-weight 500
    color base
    @media medium
      line-height 40px
      text-align center
  &__content
    padding 0 contentPadding
    @media medium
      order 2
  &__details
    align-self baseline
    min-width 200px
    @media medium
      order 1
      width 100%
      text-align center
  &__dateinfo
    font-size 1.25em
    text-align right
    @media medium
      text-align center
    &.to
      font-size 1em
      white-space nowrap
  &__priceinfo
    text-align right
    font-size 1.75em
    @media medium
      text-align center
  &__image
    float left
    padding contentPadding
    min-width 150px
    text-align center
  &__address
    padding-top contentPadding
    text-align right
  &__booking
    background #f5f5f5
    padding contentPadding
