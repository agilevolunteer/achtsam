base = #963d53
sec = #9c9c9c
smaller = "(max-width: 359px)"
small = "(max-width: 399px)"
medium = "(max-width: 480px)"
large = "(max-width: 580px)"
contentPadding = 16px

.owl-item.active
  .tx-slide
    &-button
      @media small
        font-size 14px

    &-title
      white-space nowrap
      @media smaller
        font-size 18px
        margin-bottom 6px

.tx-slide-content
  .tx-slide-content-inner
    @media medium
      padding-top 24px !important
    @media small
      padding 16px 0 8px 0 !important
    @media small
      padding 8px 0 8px 0 !important

.owl-item.cloned:not(.active)
  visibility hidden
.em-booking
  label
    white-space nowrap
    min-width 90px
    margin-right 5px

  input[name=rememberme]
    padding-left 5px

  input.input
  textarea
    width 100%
  .em-ticket-select
    width 100%
    padding-top 5px
    padding-bottom 5px
  &-form-details
    width 50%
    float left
    padding-right 20px

    @media large
      float none
      width 100%
      border-bottom 1px solid black
      padding-bottom 20px

  &-login
    float left
    width 50%
    @media large
      float none
      width 100%
      padding-left 10px !important
      border-left 0 !important
    margin-left 0 !important
.event-categories-images
  margin 0
  padding 0
  li
    list-style-type none
.event-categories
  padding-left 0
  margin-top 0
  margin-bottom 0
  display inline-block
  padding-right 4px
  li
  & > a:visited
  & > a
  & > a:active
    display inline-block
    list-style-type none
    margin-left 5px
    margin-bottom 5px
    padding 0px 4px
    border-radius 3px
    background lighten(base, 10)
    border 1px solid darken(base, 10)
    &:after
      clear both
    &:first-child
      margin-left 0px
    a
      &:visited
      &:active
      &
        color lighten(base, 50)


.home
  th.event-time
  th.event-description
    font-size 16px

.site-info-partner
  text-align center
  padding-top 20px
  padding-bottom 20px
  background white

  img
    padding 5px
    opacity .25

@import 'style/events.styl'
@import 'style/singleEvent.styl'
